# DinoAir Staging Environment Configuration
# Copy this file to .env.staging and set appropriate values

# Application Configuration
DINOAIR_APP_NAME=DinoAir-Staging
DINOAIR_ENVIRONMENT=staging
DINOAIR_DEBUG=true

# Server Configuration
DINOAIR_SERVER_HOST=0.0.0.0
DINOAIR_SERVER_PORT=8001
DINOAIR_SERVER_WORKERS=2
DINOAIR_SERVER_TIMEOUT=300

# Security Configuration
# Use a different secret key for staging
DINOAIR_SECRET_KEY=staging-secret-key-different-from-prod-min-32-chars

# Database Configuration
DINOAIR_DATABASE_TYPE=postgresql
DINOAIR_DATABASE_HOST=localhost
DINOAIR_DATABASE_PORT=5432
DINOAIR_DATABASE_NAME=dinoair_staging
DINOAIR_DATABASE_USER=dinoair_staging
DINOAIR_DATABASE_PASSWORD=staging-database-password

# AI Services Configuration
COMFYUI_HOST=localhost
COMFYUI_PORT=8189
OLLAMA_HOST=localhost
OLLAMA_PORT=11435
OLLAMA_MODEL=llama2

# Resource Limits (Lower for staging)
DINOAIR_RESOURCES_MAX_MEMORY_MB=4096
DINOAIR_RESOURCES_MAX_CPU_PERCENT=60.0

# Logging Configuration (More verbose for staging)
DINOAIR_LOGGING_LEVEL=DEBUG
DINOAIR_LOGGING_FORMAT=json
DINOAIR_LOGGING_FILE_PATH=./logs/dinoair-staging.log

# Monitoring Configuration
DINOAIR_MONITORING_ENABLED=true
DINOAIR_MONITORING_HEALTH_CHECK_INTERVAL=15
DINOAIR_MONITORING_METRICS_INTERVAL=30
ALERT_EMAIL=dev-team@yourdomain.com
WEBHOOK_URL=https://your-staging-webhook.com/alerts