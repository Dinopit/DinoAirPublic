# Alerting Configuration
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SLACK_CHANNEL=#alerts
ALERT_EMAIL_ENABLED=false
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USERNAME=your-email@gmail.com
ALERT_SMTP_PASSWORD=your-app-password
ALERT_EMAIL_FROM=alerts@dinoair.com
ALERT_EMAIL_TO=admin@dinoair.com

# Sentry Error Tracking Configuration
# Get your DSN from https://sentry.io/
SENTRY_DSN=
DINOAIR_VERSION=1.0.0
DINOAIR_ENVIRONMENT=development

# Alert Thresholds
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_MEMORY_THRESHOLD=0.9
ALERT_CPU_THRESHOLD=0.8

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# Service URLs
OLLAMA_URL=http://localhost:11434
COMFYUI_URL=http://localhost:8188

# APM Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=dinoair-web-gui-node
