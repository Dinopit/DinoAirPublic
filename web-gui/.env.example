# ====================================
# DinoAir Free Tier Environment Config
# ====================================
# Copy this file to .env.local for local development
# Never commit .env.local or any file with secrets

# Node Environment
NODE_ENV=development

# ====================================
# Server-side Configuration
# ====================================

# API Configuration
API_BASE_URL=http://localhost:8080
API_KEY=dinoair-free-tier-api-key
API_SECRET=your-secret-key-here-min-32-chars-replace-in-production

# Database (optional - for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/dinoair

# Session and Security
SESSION_SECRET=your-session-secret-min-32-chars-replace-in-production
JWT_SECRET=your-jwt-secret-min-32-characters-replace-in-production

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ComfyUI Backend
COMFYUI_API_URL=http://localhost:8188
COMFYUI_WORKFLOW_PATH=./FreeTierPacked/sd15-workflow.json

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# ====================================
# Client-side Configuration
# ====================================

# App Info
NEXT_PUBLIC_APP_NAME=DinoAir Free Tier
NEXT_PUBLIC_VERSION=1.0.0
NEXT_PUBLIC_IS_FREE_TIER=true

# API Endpoint (for client-side requests)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Features Toggle
NEXT_PUBLIC_ENABLE_IMAGE_GEN=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ARTIFACTS=true

# UI Configuration
NEXT_PUBLIC_THEME=system
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4000

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development
NEXT_PUBLIC_DEBUG_MODE=false