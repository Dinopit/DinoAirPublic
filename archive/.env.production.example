# DinoAir Production Environment Configuration
# Copy this file to .env.production and set appropriate values

# Application Configuration
DINOAIR_APP_NAME=DinoAir
DINOAIR_ENVIRONMENT=production
DINOAIR_DEBUG=false

# Server Configuration
DINOAIR_SERVER_HOST=0.0.0.0
DINOAIR_SERVER_PORT=8000
DINOAIR_SERVER_WORKERS=4
DINOAIR_SERVER_TIMEOUT=300

# Security Configuration (REQUIRED)
# Generate a secure secret key with at least 32 characters
# Example: openssl rand -hex 32
DINOAIR_SECRET_KEY=your-super-secure-secret-key-here-min-32-chars

# Database Configuration
DINOAIR_DATABASE_TYPE=postgresql
DINOAIR_DATABASE_HOST=localhost
DINOAIR_DATABASE_PORT=5432
DINOAIR_DATABASE_NAME=dinoair
DINOAIR_DATABASE_USER=dinoair
DINOAIR_DATABASE_PASSWORD=your-secure-database-password

# AI Services Configuration
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2

# Resource Limits
DINOAIR_RESOURCES_MAX_MEMORY_MB=8192
DINOAIR_RESOURCES_MAX_CPU_PERCENT=80.0

# Logging Configuration
DINOAIR_LOGGING_LEVEL=INFO
DINOAIR_LOGGING_FORMAT=json
DINOAIR_LOGGING_FILE_PATH=./logs/dinoair.log

# Monitoring Configuration
DINOAIR_MONITORING_ENABLED=true
DINOAIR_MONITORING_HEALTH_CHECK_INTERVAL=30
DINOAIR_MONITORING_METRICS_INTERVAL=60
ALERT_EMAIL=admin@yourdomain.com
WEBHOOK_URL=https://your-monitoring-webhook.com/alerts

# Optional: Syslog Configuration
SYSLOG_HOST=localhost

# Optional: External Secrets (if not using environment variables)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# VAULT_ADDR=https://your-vault-instance.com
# VAULT_TOKEN=your-vault-token