# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 4

# HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Package files
[package*.json]
indent_size = 2

# Lock files (no formatting)
[*.lock]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files (no formatting)
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot,bin,exe}]
insert_final_newline = false
trim_trailing_whitespace = false