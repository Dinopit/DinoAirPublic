{
  "dashboard": {
    "id": "dinoair-performance-monitoring",
    "title": "DinoAir Performance Monitoring",
    "tags": ["dinoair", "performance", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(dinoair_request_duration_seconds_bucket[5m])) by (le)",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "spectrum"
            }
          }
        },
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Throughput",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(dinoair_requests_total[5m]))",
            "legendFormat": "Total Requests/sec"
          },
          {
            "expr": "sum(rate(dinoair_requests_total{status=~\"2..\"}[5m]))",
            "legendFormat": "Successful Requests/sec"
          },
          {
            "expr": "sum(rate(dinoair_requests_total{status=~\"4..|5..\"}[5m]))",
            "legendFormat": "Error Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 3,
        "title": "Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "avg(dinoair_cpu_usage_percent)",
            "legendFormat": "CPU %"
          },
          {
            "expr": "avg(dinoair_memory_usage_percent)",
            "legendFormat": "Memory %"
          },
          {
            "expr": "avg(dinoair_disk_usage_percent)",
            "legendFormat": "Disk %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 9
        }
      },
      {
        "id": 4,
        "title": "Memory Usage Details",
        "type": "timeseries",
        "targets": [
          {
            "expr": "dinoair_memory_used_bytes",
            "legendFormat": "Used Memory"
          },
          {
            "expr": "dinoair_memory_available_bytes",
            "legendFormat": "Available Memory"
          },
          {
            "expr": "dinoair_memory_cached_bytes",
            "legendFormat": "Cached Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "bytes"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 17
        }
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(dinoair_network_bytes_sent_total[5m])",
            "legendFormat": "Bytes Sent/sec"
          },
          {
            "expr": "rate(dinoair_network_bytes_received_total[5m])",
            "legendFormat": "Bytes Received/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "binBps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 17
        }
      },
      {
        "id": 6,
        "title": "Process Information",
        "type": "table",
        "targets": [
          {
            "expr": "dinoair_process_cpu_percent",
            "legendFormat": "{{process_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 25
        }
      },
      {
        "id": 7,
        "title": "Performance Degradation Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(dinoair_performance_alerts_active)",
            "legendFormat": "Active Performance Alerts"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 3
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 25
        }
      }
    ]
  }
}